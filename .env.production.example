# ===========================================
# Canary Production Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgres://canary:CHANGE_ME@postgres:5432/canary
POSTGRES_USER=canary
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=canary

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# Security (REQUIRED)
# ===========================================
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=

# Generate with: openssl rand -hex 32
SESSION_SECRET=

# ===========================================
# URLs
# ===========================================
APP_URL=https://your-domain.com
API_URL=https://api.your-domain.com

# ===========================================
# OAuth (Optional)
# ===========================================
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# S3 Storage
# ===========================================
# Use included MinIO or external S3-compatible storage
S3_ENDPOINT=http://minio:9000
S3_BUCKET=canary-uploads
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
# Optional: Public URL for serving files (CDN)
# S3_PUBLIC_URL=https://cdn.your-domain.com

# ===========================================
# MinIO (if using included MinIO)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME

# ===========================================
# Worker Configuration
# ===========================================
WORKER_ENABLED=true
WORKER_CONCURRENCY=5

# ===========================================
# Ports (Optional)
# ===========================================
WEB_PORT=3000
API_PORT=3001
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
